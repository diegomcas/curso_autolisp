(defun p_params_mal	(cont)
	(setq cnt "Hey, Ahora soy un texto")
	(princ "  -> cnt = ") (princ cnt) (princ "\n")
	(princ "  -> cont = ") (princ cont) (princ "\n")
	(princ)
)

