(defun c:exe_mal ()
	(setq cnt 1)
	(setq str "Hola")
	(setq str_len (strlen str))

	(while (< cnt str_len)
		(setq char (substr str cnt 1))
		(princ "char = ") (princ char) (princ "\n")
		(p_params_mal cnt)
